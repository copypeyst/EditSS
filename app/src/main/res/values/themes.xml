<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EditSS" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/purple_500</item>
        <item name="android:colorPrimaryDark">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="android:colorAccent">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/black</item>
        <!-- Splash screen background -->
        <item name="android:windowBackground">@android:color/black</item>
        <!-- Hide action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Theme to prevent default system splash screen -->
    <style name="Theme.EditSS.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <!-- This prevents the default icon display -->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AlertDialog.EditSS" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_dialog_background</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.EditSS.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.EditSS.Button</item>
        <item name="android:textColorAlertDialogListItem">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AlertDialog.EditSS.Button" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/teal_200</item>
    </style>
</resources>