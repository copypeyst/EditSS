<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EditSS" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/purple_200</item>
        <item name="android:colorPrimaryDark">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="android:colorAccent">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/black</item>
        <!-- Splash screen background -->
        <item name="android:windowBackground">@android:color/black</item>
        <!-- Hide action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and post splash screen theme. -->
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.EditSS</item>
    </style>
</resources>